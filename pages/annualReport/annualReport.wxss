/* pages/index/annualReport/annualReport.wxss */

.download-btn, .copylink-btn, .upload-btn {
  width: 80%;
  margin: 30rpx;
  background-color: #ee7b33;
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.download-btnImg, .copylink-btnImg, .selectFile-btnImg, .upload-btnImg {
  margin-right: 8rpx;
  width: 46rpx;
  height: 46rpx;
}

.download-btn::after, .copylink-btn::after, .upload-btn::after {
  border-radius: 98rpx;
  border: 0; 
}

.link {
  display: flex;
  color: #7F8389;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.tops {
  font-size: 26rpx;
  color: #7F8389;
}
.copylink-btn {
  background-color: paleturquoise;
}

.select {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.selectFile-btn {
  margin: 10rpx 10rpx;
  color: white;
  /* border-radius: 98rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: rgb(104, 238, 104);
  width: 50rpx;
  font-size: 30rpx;
}

.file-name {
  border: 1rpx solid rgb(158, 151, 151);
  width: 400rpx;
  height: 80rpx;
  display: inline-block;
  text-overflow: ellipsis;
}

.upload-btn {
  background-color: navajowhite;
}

