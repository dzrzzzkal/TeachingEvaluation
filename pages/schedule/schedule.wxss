/* 按周显示课表(学生) */
.title{
  width: 100%;
  height: 100rpx;
  position: relative
}
.title_left{
  width: 280rpx;
  height:30px;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 30rpx;
}
.title_left > view{
  display: inline-block;
}
.week{
